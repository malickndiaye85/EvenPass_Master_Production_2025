rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function - Admin Finance UID
    function isAdminFinance() {
      return request.auth != null && request.auth.uid == 'Tnq8Isi0fATmidMwEuVrw1SAJkI3';
    }

    // Helper function - Authenticated user
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function - File size limit (10MB)
    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Helper function - Valid image format
    function isValidImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // ============================================
    // EVENT IMAGES (Affiches événements)
    // ============================================
    match /events/{eventId}/{fileName} {
      // Public : Lecture des images d'événements
      allow read: if true;

      // Organisateurs : Upload limité à 10MB, formats image uniquement
      allow write: if isAuthenticated() &&
                     isValidFileSize() &&
                     isValidImage();

      // Admin : Accès total
      allow write: if isAdminFinance();
    }

    // ============================================
    // ORGANIZER LOGOS (Logos organisateurs)
    // ============================================
    match /organizers/{organizerId}/{fileName} {
      // Public : Lecture des logos
      allow read: if true;

      // Organisateur : Upload de son propre logo
      allow write: if isAuthenticated() &&
                     request.auth.uid == organizerId &&
                     isValidFileSize() &&
                     isValidImage();

      // Admin : Accès total
      allow write: if isAdminFinance();
    }

    // ============================================
    // USER AVATARS (Photos de profil)
    // ============================================
    match /users/{userId}/{fileName} {
      // Utilisateur authentifié : Lecture
      allow read: if isAuthenticated();

      // Utilisateur : Upload de son propre avatar
      allow write: if isAuthenticated() &&
                     request.auth.uid == userId &&
                     isValidFileSize() &&
                     isValidImage();
    }

    // ============================================
    // TICKETS QR CODES
    // ============================================
    match /tickets/{ticketId}/{fileName} {
      // Lecture pour l'utilisateur propriétaire ou admin
      allow read: if isAuthenticated() || isAdminFinance();

      // Écriture admin uniquement (génération automatique)
      allow write: if isAdminFinance();
    }

    // ============================================
    // DOCUMENTS FINANCIERS
    // ============================================
    match /finances/{document=**} {
      // Admin Finance uniquement
      allow read, write: if isAdminFinance();
    }

    // ============================================
    // LOGS ET BACKUPS
    // ============================================
    match /logs/{document=**} {
      // Admin Finance uniquement
      allow read, write: if isAdminFinance();
    }

    match /backups/{document=**} {
      // Admin Finance uniquement
      allow read, write: if isAdminFinance();
    }

    // ============================================
    // BLOCAGE PAR DÉFAUT
    // ============================================
    // Tout autre fichier est bloqué
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
